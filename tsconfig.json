{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["core/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src", "core", "bin"],
  "exclude": ["node_modules", "dist", "templates"]
}
